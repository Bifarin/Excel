Private Sub Worksheet_SelectionChange(ByVal Target As Range)
Dim rng As Range
Set rng = Range("M:T")
If Not Intersect(Target, rng) Is Nothing Then
    On Error GoTo 0
        With ActiveSheet.Shapes("Button 1")
        .Top = Target.Offset(0).Top
            .Left = Target.Offset(, 2).Left
        End With
End If
End Sub
